<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/image_track"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:scaleType="fitXY"
        android:src="@drawable/soundcloud" />

    <TextView
        android:id="@+id/text_name_track"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_name_singer"
        app:layout_constraintLeft_toRightOf="@id/image_track"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_track"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_name_singer"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name_track"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@id/image_track"
        app:layout_constraintLeft_toLeftOf="@id/text_name_track"
        app:layout_constraintLeft_toRightOf="@id/image_track"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name_track" />
</android.support.constraint.ConstraintLayout>
