<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dp_20">

    <ImageView
        android:id="@+id/image_genre"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        android:scaleType="fitXY"
        android:src="@drawable/soundcloud"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_name_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_genre"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_sound_cloud"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@id/text_name_genre"
        app:layout_constraintLeft_toLeftOf="parent"
         />
</android.support.constraint.ConstraintLayout>
